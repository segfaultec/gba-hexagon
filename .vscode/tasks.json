{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "runner",
            "dependsOn": [
                "make release",
                "run"
            ],
            "dependsOrder": "sequence",
            "type": "shell",
            "windows": {
                "command": "echo done"
            },
            "problemMatcher": []
        },
        {
            "label": "stop emulation",
            "type": "shell",
            "windows": {
                "command": "taskkill /im mGBA.exe /F"
            },
            "problemMatcher": []
        },
        {
            "label": "make debug",
            "type": "process",
            "command": "make",
            "args": [
                "DEBUG=1", //"-B"
            ],
            "group": "build",
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "make release",
            "type": "process",
            "command": "make",
            "args": [
                "DEBUG=0",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "make clean",
            "problemMatcher": []
        },
        {
            "label": "gdb-debug",
            "type": "shell",
            "dependsOn": [
                //"make debug"
                "make release"
            ],
            "isBackground": false,
            "windows": {
                "command": "D:/Documents/GBA/mGBA/mGBA.exe -g ${workspaceFolder}/${workspaceFolderBasename}.gba"
            },
            "presentation": {
                "clear": true,
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "run",
            "type": "shell",
            "isBackground": true,
            "command": "D:/Documents/GBA/mGBA/mGBA.exe ${workspaceFolder}/${workspaceFolderBasename}.gba",
            "problemMatcher": []
        },
        {
            "label": "run no$gba",
            "type": "shell",
            "isBackground": true,
            "command": "D:/Documents/GBA/no$gba/NO$GBA.exe  ${workspaceFolder}/${workspaceFolderBasename}.elf",
            "problemMatcher": []
        }
    ]
} 